# Pretix Configuration
# Copy this file to .env and modify as needed

# ===================
# Debug Settings
# ===================
PRETIX_DEBUG=True

# ===================
# URL Configuration
# ===================
PRETIX_URL=http://localhost:8000
PRETIX_PORT=8000

# ===================
# Database Settings
# ===================
POSTGRES_DB=pretix
POSTGRES_USER=pretix
POSTGRES_PASSWORD=pretix_secure_password_change_me
POSTGRES_HOST=localhost

# ===================
# Redis Settings
# ===================
REDIS_HOST=redis
REDIS_LOCATION=redis://redis/0
CELERY_BROKER=redis://redis/1
CELERY_BACKEND=redis://redis/2

# ===================
# Email Settings
# ===================
PRETIX_MAIL_FROM=pretix@localhost

# ===================
# Migration Settings
# ===================
# Set to 'yes' for auto migration, 'skip' to skip
AUTOMIGRATE=yes
